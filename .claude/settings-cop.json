{
    "env": {
      "ANTHROPIC_BASE_URL": "http://localhost:4141",
      "ANTHROPIC_AUTH_TOKEN": "dummy",
      "ANTHROPIC_MODEL": "claude-sonnet-4",
      "ANTHROPIC_DEFAULT_SONNET_MODEL": "claude-sonnet-4",
      "ANTHROPIC_DEFAULT_OPUS_MODEL": "claude-sonnet-4",
      "ANTHROPIC_SMALL_FAST_MODEL": "grok-code-fast-1",
      "DISABLE_NON_ESSENTIAL_MODEL_CALLS": "1",
      "DISABLE_TELEMETRY": "1",
      "CLAUDE_CODE_DISABLE_NONESSENTIAL_TRAFFIC": "1"
    },
    "hooks": {
    "UserPromptSubmit": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "$CLAUDE_CONFIG_DIR/hooks/context7_reminder.py",
            "timeout": 5
          },
          {
            "type": "command",
            "command": "$CLAUDE_CONFIG_DIR/hooks/claude_command_suggestions.py",
            "timeout": 5
          }
        ]
      },
      {
        "hooks": [
          {
            "type": "command",
            "command": "$CLAUDE_CONFIG_DIR/hooks/serena_context_suggestions.py"
          }
        ]
      }
    ],
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "$CLAUDE_CONFIG_DIR/hooks/session_setup.py",
            "timeout": 10
          }
        ]
      },
      {
        "matcher": "startup",
        "hooks": [
          {
            "type": "command",
            "command": "$CLAUDE_CONFIG_DIR/hooks/serena_project_init.py"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Edit|Write|MultiEdit",
        "hooks": [
          {
            "type": "command",
            "command": "$CLAUDE_CONFIG_DIR/hooks/auto_format.py",
            "timeout": 30
          },
          {
            "type": "command",
            "command": "$CLAUDE_CONFIG_DIR/hooks/git_work_tracker.py",
            "timeout": 5
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "$CLAUDE_CONFIG_DIR/hooks/bash_safety.py",
            "timeout": 5
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "$CLAUDE_CONFIG_DIR/hooks/context_monitor.py",
            "timeout": 10
          },
          {
            "type": "command",
            "command": "$CLAUDE_CONFIG_DIR/hooks/git_work_tracker.py",
            "timeout": 5
          }
        ]
      }
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "$CLAUDE_CONFIG_DIR/hooks/enhanced_statusline.sh",
    "padding": 1
  },
  "outputStyle": "concise"
}
  
  