# Color Themes
# Options: default, neon, ocean, forest, sunset, monochrome, cyberpunk
COLOR_THEME=sunset

# Animation Options
ENABLE_SPINNER=true
ENABLE_GRADIENT_BORDER=true
ENABLE_BLINK_ALERTS=true

# Performance Options
CACHE_GIT_STATUS=true      # Cache git status for 5 seconds
CACHE_SYSTEM_METRICS=true  # Cache system metrics for 10 seconds

# Custom Emojis (leave empty for defaults)
CUSTOM_MODEL_EMOJI=""
CUSTOM_PROJECT_EMOJI=""
CUSTOM_GIT_EMOJI=""
CUSTOM_MCP_EMOJI=""
