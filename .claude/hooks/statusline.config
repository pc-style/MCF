# Enhanced Statusline Configuration
# Customize your Claude Code statusline experience!

# Display Options (true/false)
SHOW_TIME_GREETING=true
SHOW_GIT_DETAILS=true
SHOW_MCP_SERVERS=true
SHOW_COST_INFO=true
SHOW_SESSION_TIME=true
SHOW_PROJECT_STATS=true
SHOW_SYSTEM_METRICS=true
